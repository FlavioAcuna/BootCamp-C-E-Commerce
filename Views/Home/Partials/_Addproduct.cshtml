@model Product
<form asp-action="AddProduct" asp-controller="Home" method="post">
    <div class="row">
        <label asp-for="Name">Name :</label>
    </div>
    <div class="row">
        <input asp-for="Name">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="row">
        <label asp-for="ImageUrl">Image (Url) :</label>
    </div>
    <div class="row">
        <input asp-for="ImageUrl">
        <span asp-validation-for="ImageUrl"></span>
    </div>
    <div class="row">
        <label asp-for="Quantity">Quantity :</label>
    </div>
    <div class="row">
        <input asp-for="Quantity">
        <span asp-validation-for="Quantity"></span>
    </div>
    <button class=" mt-3 btn btn-success">Create</button>
</form>