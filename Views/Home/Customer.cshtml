@model CustomerViewModel
<div class="container-fluid">
    <div class="row justify-content-start">
        <div class="col-4">
            <h3><u>Add a new customer</u></h3>
        </div>
    </div>
    @await Html.PartialAsync("Partials/_AddCustomer", Model.Addcustomer)
    <div class="row p-5">
        <div class="col">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th scope="col">Customer Name</th>
                        <th scope="col">Joined on</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Customer customer in Model.CustomerList)
                    {
                        <tr>
                            <td><strong>@customer.CustomerName</strong></td>
                            <td>@customer.CreatedAt.ToString("MMM dd,yyyy")</td>
                            <td>
                                <form asp-action="RemoveCustomer" asp-controller="Home" method="post"
                                    asp-route-CustomerID="@customer.CustomerId">
                                    <button class="btn btn-danger">Remove</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>